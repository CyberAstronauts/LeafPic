<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_background"
    >
    <!--
    TOOLBAR
    -->
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:background="@color/toolbar"
        android:windowActionBarOverlay="true"
        />

    <!--
    GENERAL
    -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/general_setting_card"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/general_setting_title"
                android:text="General"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="@color/md_dark_background"
                android:textSize="16sp"
                />

                <!--COLAPS TOOLBAR BAR-->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_switch_CollapsingToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/collapsing_toolbar_Icon"
                        android:src="@mipmap/ic_gradient_black_24dp"
                        android:padding="15dp"/>
                    <TextView
                        android:id="@+id/collapsing_toolbar_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:text="Collapsing Toolbar"
                        />
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/SetCollapsingToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:background="?android:selectableItemBackground"
                        android:button="@null"
                        android:hapticFeedbackEnabled="true"
                        />
                </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>




    <!--
    THEME
    -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/theme_setting_card"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/theme_setting_title"
                android:text="Theme"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="@color/md_dark_background"
                android:textSize="16sp"
                />
            <!--PRIMARY COLOR-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false"
                >
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_primaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/PrimaryColor_Icon"
                        android:src="@mipmap/ic_color_lens_black_24dp"
                        android:padding="15dp"
                        />
                    <TextView
                        android:id="@+id/PrimaryColor_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textSize="16sp"
                        android:textColor="@color/md_dark_background"
                        android:text="Primary Color"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!--ACCENT COLOR-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_accentColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accentColor_Icon"
                    android:src="@mipmap/ic_colorize_black_24dp"
                    android:padding="15dp"
                    />
                <TextView
                    android:id="@+id/accentColor_Item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/md_dark_background"
                    android:text="Accent Color"
                    />
            </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!--DARK THEME-->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_switch_DarkTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DarkTheme_Icon"
                    android:src="@mipmap/ic_invert_colors_black_24dp"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/DarkTheme_Item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/md_dark_background"
                    android:textSize="16sp"
                    android:text="Dark Theme"
                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/SetDarkTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:background="?android:selectableItemBackground"
                    android:button="@null"
                    android:hapticFeedbackEnabled="true"
                    />
            </LinearLayout>
            <!--COLORED NAV BAR-->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_switch_ColoredNavBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/NavBar_Icon"
                    android:src="@mipmap/ic_video_label_black_24dp"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/NavBar_Item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/md_dark_background"
                    android:textSize="16sp"
                    android:text="Colored Nav Bar"
                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/SetColoredNavBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:background="?android:selectableItemBackground"
                    android:button="@null"
                    android:hapticFeedbackEnabled="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>