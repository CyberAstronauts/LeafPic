<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--
    TOOLBAR
    -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:background="@color/toolbar"
        android:windowActionBarOverlay="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--
            GENERAL
            -->
            <android.support.v7.widget.CardView
                android:id="@+id/general_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/general_setting_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/general"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                        <!--COLAPS TOOLBAR BAR-->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/ll_switch_CollapsingToolBar"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            >
                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/collapsing_toolbar_Icon"
                                android:layout_height="22dp"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                app:iiv_icon="gmd-gradient"
                                />

                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                >
                                <TextView
                                    android:id="@+id/collapsing_toolbar_Item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/collapsing_toolbar"
                                    android:textColor="@color/md_dark_background"
                                    android:textSize="16sp"
                                    />
                                <TextView
                                    android:id="@+id/collapsing_toolbar_Item_Sub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/collapsing_toolbar_sub"
                                    android:textColor="@color/md_grey_400"
                                    android:textSize="14sp"
                                    />
                            </LinearLayout>

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/SetCollapsingToolbar"
                                android:background="?android:selectableItemBackground"
                                android:button="@null"
                                android:hapticFeedbackEnabled="true"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:paddingRight="5dp"
                                android:gravity="center"
                                android:layout_weight="2"
                                />
                        </LinearLayout>

                    <!-- TRASLUCENT STATUS BAR-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_TraslucentStatusBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="15dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/Traslucent_StatusBar_Icon"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center_vertical"
                            app:iiv_icon="gmd-web-asset"
                            android:layout_weight="2"
                            />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:id="@+id/Traslucent_StatusBar_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/traslucent_statusbar"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/Traslucent_StatusBar_Item_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/traslucent_statusbar_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                            </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SetTraslucentStatusBar"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--
            PICTURE SETTING
            -->
            <android.support.v7.widget.CardView
                android:id="@+id/preview_picture_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/picture_setting_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/picture_viewer"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!--MAX BRIGHTENESS-->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_max_luminosita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/ll_switch_max_luminosita_icon"
                            android:layout_height="22dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-brightness-high" />


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:id="@+id/max_luminosita_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/max_brightness"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/max_luminosita_Item_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/max_brightness_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                            </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/set_max_luminosita"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            />
                    </LinearLayout>

                    <!-- PICTURE ORIENTATION-->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_picture_orientation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/ll_switch_picture_orientation_icon"
                            android:layout_height="22dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-screen-rotation" />

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:id="@+id/picture_orientation_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/picture_orientation"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"

                                />
                            <TextView
                                android:id="@+id/picture_orientation_Item_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/picture_orientation_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />

                        </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/set_picture_orientation"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="2" />
                    </LinearLayout>


                     <!-- APPLY THEME ON 3TH ACT -->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_apply_theme_3thAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/ll_apply_theme_3thAct_icon"
                            android:layout_height="22dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-brush" />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:id="@+id/apply_theme_3thAct_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apply_theme"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/apply_theme_3thAct_title_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apply_theme_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/apply_theme_3th_act_enabled"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            />
                    </LinearLayout>
                    <!--DIVIDER VIEW-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        />

                    <!-- TRASPARENCY -->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_seek_bar_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            >
                            <TextView
                                android:id="@+id/seek_bar_alpha_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/transparency"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                android:paddingLeft="20dp"
                                />
                            <TextView
                                android:id="@+id/seek_bar_alpha_title_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/transparency_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                android:paddingLeft="20dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/seek_bar_alpha_count"
                            android:text="100%"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            />

                    </LinearLayout>
                    <!-- ALPHA SEEKBAR -->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <SeekBar
                            android:id="@+id/seek_bar_alpha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--THEME-->
            <android.support.v7.widget.CardView
                android:id="@+id/theme_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/theme_setting_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"

                        android:paddingTop="15dp"
                        android:text="@string/theme"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <!--PRIMARY COLOR-->
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mrl_rippleAlpha="0.05"
                        app:mrl_rippleDelayClick="false"
                        >
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/ll_primaryColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            >

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/PrimaryColor_Icon"
                                android:layout_height="22dp"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                app:iiv_icon="gmd-color-lens"
                                />
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="8"
                                >
                                <TextView
                                    android:id="@+id/PrimaryColor_Item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/primary_color"
                                    android:textColor="@color/md_dark_background"
                                    android:textSize="16sp"
                                    android:paddingRight="5dp"
                                    />
                                <TextView
                                    android:id="@+id/PrimaryColor_Item_Sub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/primary_color_sub"
                                    android:textColor="@color/md_grey_400"
                                    android:textSize="14sp"
                                    android:paddingRight="5dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <!--ACCENT COLOR-->
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mrl_rippleAlpha="0.05"
                        app:mrl_rippleDelayClick="false">
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_accentColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/accentColor_Icon"
                            android:layout_height="22dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-colorize"
                            />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            >
                            <TextView
                                android:id="@+id/accentColor_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accent_color"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                android:paddingRight="5dp"
                                />
                            <TextView
                                android:id="@+id/accentColor_Item_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accent_color_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                android:paddingRight="5dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <!--DARK THEME-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/DarkTheme_Icon"
                            android:layout_height="22dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-invert-colors"
                            />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:id="@+id/DarkTheme_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dark_theme"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/DarkTheme_Item_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dark_theme_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SetDarkTheme"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            />
                    </LinearLayout>
                    <!--COLORED NAV BAR-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_ColoredNavBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingTop="8dp"
                        android:paddingBottom="15dp"
                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/NavBar_Icon"
                            android:layout_height="22dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-video-label"
                            />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:id="@+id/NavBar_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colored_navbar"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/NavBar_Item_Sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colored_navbar_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                            </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SetColoredNavBar"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>