    <style name="AlertDialogDark" parent="Theme.AppCompat.Dialog">

    </style>
    <style name="AlertDialogLight" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/toolbar</item>
        <item name="android:elevation" tools:ignore="NewApi">5dp</item>
        <item name="theme">@style/MyToolbarTheme</item>

    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@mipmap/ic_photo_camera_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="fab2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@mipmap/ic_visibility_off_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">50dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="fabAddFolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">50dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--PREFERENCE SCREEN-->
    <style name="PreferencesThemeDark">
        <item name="android:background">#2b2b2b</item>
    </style>
    <style name="PreferencesThemeLight">

        <item name="android:background">#FAFAFA</item>
        <!--<item name="android:background">#424242</item>-->
    </style>








    <!--TRY APP THEME-->
    <style name="_ParentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/black</item>

        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="grid_item_text_primary">?android:textColorPrimaryInverse</item>
        <item name="grid_item_text_secondary">?android:textColorSecondaryInverse</item>
        <item name="themed_divider">@color/md_divider_black</item>
        <item name="empty_text_color">@android:color/black</item>

        <item name="popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="md_dark_theme">false</item>

        <item name="editor_option_selector">@drawable/editor_option_selector</item>
        <item name="grid_selector">@drawable/grid_selector</item>
        <item name="list_selector">@drawable/list_selector</item>
        <item name="menu_selector">@drawable/menu_selector</item>
        <item name="video_overlay_selector">@drawable/video_overlay_selector</item>
        <item name="default_image_background">@android:color/white</item>
        <item name="empty_image_background">@color/material_indigo_100</item>

        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="_ParentThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@android:color/white</item>

        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="grid_item_text_primary">?android:textColorPrimary</item>
        <item name="grid_item_text_secondary">?android:textColorSecondary</item>
        <item name="themed_divider">@color/md_divider_white</item>
        <item name="empty_text_color">@android:color/white</item>

        <item name="popup_theme">@style/ThemeOverlay.AppCompat</item>
        <item name="md_dark_theme">true</item>

        <item name="editor_option_selector">@drawable/editor_option_selector</item>
        <item name="grid_selector">@drawable/grid_selector_dark</item>
        <item name="list_selector">@drawable/list_selector_dark</item>
        <item name="menu_selector">@drawable/menu_selector_dark</item>
        <item name="video_overlay_selector">@drawable/video_overlay_selector</item>
        <item name="default_image_background">@color/background_material_dark</item>
        <item name="empty_image_background">@color/background_material_dark</item>

        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme" parent="@style/_ParentTheme" />

    <style name="AppTheme.Dark" parent="@style/_ParentThemeDark" />

    <style name="AppTheme.Viewer" parent="@style/_ParentTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Viewer.Dark" parent="@style/_ParentThemeDark">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme"></style>

    <style name="AppTheme.Settings.Dark" parent="AppTheme.Dark"></style>

    <style name="ToolbarSubtitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#80ffffff</item>
    </style>

</resources>
